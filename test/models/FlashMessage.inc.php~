<?php

	class FlashMessage{

		static public function setMsg($msg){
			$session['f_msg']=$msg;

		}
		static public function display($custom=false){
			if (!isset($session['f_msg'])) 
				return;

			$msg = $session['f_msg'];
			unset($session['f_msg']);
			if (!$custom )
				echo '<div id="flash_message" >'.$msg.' </div>';
			return $msg;
		}

		static public function cleanUp (){
			if (isset($session['f_msg'])){
				unset($session['f_msg']);
			}

		}
	}
?>
